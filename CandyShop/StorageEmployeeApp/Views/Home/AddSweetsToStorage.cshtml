@{
    ViewData["Title"] = "Add components";
}
<div class="text-center">
    <h2 class="display-4">Добавить сладости</h2>
</div>
<form class="container-fluid" method="post">
    <div class="form-group">
        <div class="row">
            <div class="col-4">Склад:</div>
            <div class="col-8">
                <select id="storageId" name="storageId" class="form-control" asp-items="@(new SelectList(@ViewBag.Storage,"Id", "StorageName"))">
                </select>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-4">Сладости:</div>
            <div class="col-8">
                <select id="sweetId" name="sweetId" class="form-control" asp-items="@(new SelectList(@ViewBag.Sweet,"Id", "SweetName"))">
                </select>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-4">Count:</div>
            <div class="col-8"><input type="text" name="count" id="count" /></div>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-lg-12">
            <button type="submit" style="min-width: 100px" class="btn btn-sm btn-light">
                Add
            </button>
        </div>
    </div>
</form> 