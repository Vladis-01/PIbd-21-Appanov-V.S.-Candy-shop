@{
    ViewData["Title"] = "Создать склад";
}
<div class="text-center">
    <h2 class="display-4">Создать склад</h2>
</div>
<form class="container-fluid" method="post">
    <div class="form-group">
        <div class="row">
            <div class="col-4">Имя:</div>
            <div class="col-8"><input type="text" name="name" id="name" /></div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-4">Ответственный:</div>
            <div class="col-8"><input type="text" name="storageManager" id="storageManager" /></div>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-lg-12">
            <button type="submit" style="min-width: 100px" class="btn btn-sm btn-light">
                Создать
            </button>
        </div>
    </div>
</form>